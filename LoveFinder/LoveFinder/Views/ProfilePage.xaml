<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoveFinder.Views.ProfilePage"
             Style="{StaticResource appBackground}">
    <StackLayout Style="{StaticResource pageMain}">
        <ImageButton Source="BlankProfile.jpg" Clicked="ProfileImage_Clicked" Style="{StaticResource btnLike}"/>
        <Label Style="{StaticResource titleMain}">User Name</Label>

        <Label Style="{StaticResource titleSecondary}">Bio:</Label>
        <Label Style="{StaticResource textBoxMain}">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras vel leo nec turpis consectetur commodo ac at risus.
        </Label>

        <Button Text="Save" Clicked="Save_Clicked" Style="{StaticResource btnMain}"/>
        <Button Text="Sign out" Style="{StaticResource btnMain}"/>
        <Button Text="Remove profile" Style="{StaticResource btnAlert}"/>
    </StackLayout>
</ContentPage>