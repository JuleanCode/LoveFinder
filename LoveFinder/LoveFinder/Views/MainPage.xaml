<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoveFinder.MainPage"
             Style="{StaticResource appBackground}">
    <StackLayout Style="{StaticResource pageMain}">
        <Image Source="logo.jpg" />
        
        <Entry x:Name="Email" Placeholder="Email" Style="{StaticResource inputMain}"/>
        <Entry x:Name="Password" Placeholder="Password" Style="{StaticResource inputMain}"/>
        
        <Button Text="Login" Clicked="Login_Clicked" Style="{StaticResource btnMain}"/>
        <Button Text="Register" Clicked="Register_Clicked" Style="{StaticResource btnMain}"/>
    </StackLayout>

</ContentPage>
