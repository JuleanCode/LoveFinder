<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoveFinder.MainPage">

    <StackLayout Padding="24">
        <Label Text="Login" FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="Email" Placeholder="Email"/>
        <Entry x:Name="Password" Placeholder="Password"/>
        <Button Text="Login" Style="{StaticResource btnMain}" Clicked="Login_Clicked" />
        <Button Text="Register" Style="{StaticResource btnMain}" Clicked="Register_Clicked" />
    </StackLayout>

</ContentPage>
